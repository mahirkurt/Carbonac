# Carbonac — Raspberry Pi overrides
# Usage: docker compose --env-file .env --env-file .env.pi --profile pi up -d

# Redis (local on Pi, exposed to Tailscale for HP worker)
REDIS_PORT=6379
REDIS_MEMORY_LIMIT=128m

# API (port 3003 because Pi port 3001 is used by anythingllm)
# Cloudflare tunnel ingress: http://localhost:3003
API_HOST_PORT=3003
API_MEMORY_LIMIT=384m

# Worker (if running on Pi — limited resources)
WORKER_MEMORY_LIMIT=1536m
WORKER_CONCURRENCY=1
PDF_QA_ENABLED=false
