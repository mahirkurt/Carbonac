{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "ActionBoxPattern",
  "type": "object",
  "additionalProperties": false,
  "required": ["title", "actions"],
  "properties": {
    "title": { "type": "string" },
    "actions": {
      "type": "array",
      "items": { "type": "string" },
      "minItems": 1
    },
    "cta": { "type": "string" }
  }
}
