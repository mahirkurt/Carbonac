{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "ProfileCardPattern",
  "type": "object",
  "additionalProperties": false,
  "required": ["name", "role"],
  "properties": {
    "name": { "type": "string" },
    "role": { "type": "string" },
    "summary": { "type": "string" },
    "location": { "type": "string" },
    "contact": { "type": "string" },
    "links": {
      "type": "array",
      "items": { "type": "string" }
    },
    "highlights": {
      "type": "array",
      "items": { "type": "string" }
    }
  }
}
